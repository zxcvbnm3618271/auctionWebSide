<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	

	<bean id="auctionUserBIZ" class="com.qf.tesla.bizimpl.AuctionUserBIZImpl">
		<property name="auctionUserDao">
			<ref bean="auctionUserDao" />
		</property>
	</bean>

	<bean class="com.qf.tesla.action.AuctioinUserAction" scope="prototype">
		<property name="auctionUserBIZ">
			<ref bean="auctionUserBIZ" />
		</property>
	</bean>
	
	<bean class="com.qf.tesla.action.AuctionAction" scope="prototype">
		<property name="auctionBIZ">
			<ref bean="auctionBIZ" />
		</property>
	</bean>
	
	<bean class="com.qf.tesla.action.AuctionRecordAction" scope="prototype">
		<property name="auctionRecordBIZ">
			<ref bean="auctionRecordBIZ" />
		</property>
		<property name="auctionBIZ">
			<ref bean="auctionBIZ" />
		</property>
	</bean>
</beans>